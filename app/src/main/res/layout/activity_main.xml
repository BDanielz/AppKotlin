<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dan.appkotlin.MainActivity">

    <TextView
        android:layout_width="wrap_content" android:textSize="21sp" android:layout_margin="5dp" android:id="@+id/tc"
        android:text="This is the first screen plase click type the message the button down to send your message to another screen"
        android:layout_height="wrap_content" />
<EditText
    android:layout_width="match_parent" android:layout_below="@+id/tc"
    android:id="@+id/input" android:hint="Your message"
    android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_click_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="Send" />

    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"/>

</RelativeLayout>
